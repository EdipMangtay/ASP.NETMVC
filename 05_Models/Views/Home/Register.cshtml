@model _05_Models.Models.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-4"></div>
                <div class="col-4">
                    @Html.ValidationSummary(true)
                    <form action="/Home/Register" method="post">
                        <div class="mb-3">
                            <label class="form-label">Email address</label>
                            <input type="email" name="Email" value="@Model.Email" class="form-control">
                            @Html.ValidationMessageFor(i=> i.Email, "", new {@class="text-danger"})
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" name="Password" value="@Model.Password" class="form-control">
                            @Html.ValidationMessageFor(i => i.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <label class="form-label">RePassword</label>
                            <input type="password" name="repassword" value="@Model.RePassword" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">First name</label>
                            @*<input type="text" name="firstname" value="@Model.FirstName" class="form-control">*@
                            @Html.TextBoxFor(i => i.FirstName, new {@class= "form-control" })
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Last name</label>
                            @Html.TextBoxFor(i => i.LastName, new { @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Address</label>
                            <textarea rows="3" cols="10" name="address" class="form-control">@Model.Address </textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            @Html.TextBoxFor(i => i.Phone, new { @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>

                    </form>


                </div>
                <div class="col-4"></div>
            </div>

        </div>
    </div>
</body>
</html>

